# Database MySQL
MYSQL_ROOT_PASSWORD=CAMBIA_QUESTA_PASSWORD_ROOT
MYSQL_PASSWORD=CAMBIA_QUESTA_PASSWORD_USER
MYSQL_DATABASE=OriBruniRadioControls
MYSQL_USER=meshdash

# Applicazione
FLASK_ENV=production
LOG_LEVEL=INFO

# Backup
RETENTION_DAYS=30
VERIFY_BACKUP=false

# Sicurezza
# Genera password sicure con: openssl rand -base64 32
